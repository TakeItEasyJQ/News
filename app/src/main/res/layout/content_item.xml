<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#d8cece"
    android:layout_width="match_parent"
    android:layout_height="170dp">
    <TextView
        android:id="@+id/cont_title"
        android:maxLines="2"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/cont_img"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/cont_title"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/cont_content"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:textSize="18dp"
        android:maxLines="4"
        android:layout_toRightOf="@+id/cont_img"
        android:layout_below="@+id/cont_title"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/cont_img"
        android:layout_below="@+id/cont_content"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/cont_date"
            android:textColor="#000000"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/cont_source"
            android:textColor="#000000"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>